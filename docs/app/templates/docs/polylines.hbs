<div class="row">
  <div class="col-lg-7 order-2 order-lg-1">
    <section>
      <h5>Creating polylines</h5>
      <p>Use the <var>polyline</var> component to create a new polyline.</p>

      <CodeSnippet @name="basic-polylines.hbs" />

      <DocTip @badgeText="Test">
        Click on the map to append new points to the polyline!
      </DocTip>
    </section>

    <p>{{this.nextPage.text}}</p>
    <LinkToNext @nextPage={{this.nextPage}} />
  </div>
  <div class="col-lg-5 order-1 order-lg-2 sticky-top sticky-map">
    <GMap
      @lat={{this.london.lat}}
      @lng={{this.london.lng}}
      @zoom={{10}}
      @styles={{this.primaryMapStyle}}
      class="ember-google-map-responsive"
      @onClick={{this.appendPolyline}} as |g|>

      <g.polyline
        @path={{this.flightCoordinates}}
        @geodesic={{true}}
        @strokeColor={{this.fillColor}}
        @strokeOpacity={{1}}
        @strokeWeight={{3}} />

    </GMap>
  </div>
</div>