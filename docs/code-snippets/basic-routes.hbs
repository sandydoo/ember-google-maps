<GMap
  @lat={{this.london.lat}}
  @lng={{this.london.lng}}
  @zoom={{12}} as |map|>

  <map.directions
    @origin="Covent Garden"
    @destination="Clerkenwell"
    @travelMode="WALKING" as |directions|>

    <directions.route @polylineOptions={{g-map/hash strokeColor="green"}} />

  </map.directions>
</GMap>